<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModalReference">
<i class="fa fa-plus"></i>  Ajouter Référence
</button>

<!-- Modal -->
<div class="modal fade" id="myModalReference"  role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" id="close-up-add-modale" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Ajouter Référence</h4>
      </div>
       {{ form_start(form, {'method': 'post', 'action': path('ajouter_reference'), 'attr': {'id':'add-reference-form'}}) }}
      <div class="modal-body">
        
        <div class="row">
<div class="col-md-12">














       <div class="col-md-6 form-group">
                  <label for="username">Type :</label>
               {{form_widget(form.type ,{'id':'type-reference','attr':{'class': 'form-control','placeholder':'Type'}})}}                 
                    <span class="text-danger" id="data.type"></span>     
       </div> 


     
      <div class="col-md-6 form-group">
                  <label for="username">Date de sortie :</label>
               
               <input type="text" class="form-control" name="premier-sortie" id="premier-sortie"  placeholder="Date sortie"/>               
                    <span class="text-danger" id="data.premiersortie"></span>     
       </div> 




       <div class="col-md-12 form-group">
                  <label for="username">Pays:</label>
                  {{form_widget(form.pays ,{'id':'pays-reference','attr':{'class': 'form-control','placeholder':'Pays'}})}}                 
                    <span class="text-danger" id="data.pays"></span>

                 
       </div>


  
 <div class="col-md-12 form-group">
                  <label for="username">Titre:</label>
                  {{form_widget(form.titre ,{'id':'titre-reference','attr':{'class': 'form-control','placeholder':'Titre'}})}}                 
                    <span class="text-danger" id="data.titre"></span>

                 
       </div>
     



  <div class="col-md-12 form-group">
                  <label for="username">Description :</label>
                  {{form_widget(form.description ,{'id':'editor1','attr':{'class': 'form-control','placeholder':'Description','rows':8}})}}                 
                    <span class="text-danger" id="data.description"></span>

                 
       </div>




 <div class="col-md-12">


    <div class="form-group">

                        <div class="file-loading"> 

                           
                            {{form_widget(form.image,{'id':'file-1' , 'attr': {'class': 'file'} })}} 


                     </div>

                     <span id="data.image" class="text-danger"></span>

            </div>
          </div>

















































</div>
</div>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal" id="close-modale-add">Close</button>
        <button type="submit" class="btn btn-primary" id="btn-add-reference"> <span>Enregistrer</span><i id="spin-add-reference"></i></button>
      </div>
      {{ form_end(form) }}
    </div>
  </div>
</div>

