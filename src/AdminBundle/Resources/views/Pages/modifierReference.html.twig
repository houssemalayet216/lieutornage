{% extends '@Admin/Default/templateAdmin.html.twig' %}
{% block stylesheet %}
   <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/4.4.7/css/fileinput.css" media="all" rel="stylesheet" type="text/css"/>
{% endblock %}

{% block section_haider %}
<section class="content-header">
     
      <ol class="breadcrumb">

        <li><a href="#"><i class="fa fa-dashboard"></i>Tableau de bord</a></li>
        <li class="active">Modifier Référence</li>
      </ol>
    </section>
{%endblock%}

 {%block pageContainer %} 
 

 



 <section class="content">

  <div class="row">
<div class="col-md-12">


  <div class="panel panel-default">
              <div class="panel-heading">Modifier Référence</div>
              <div class="panel-body">



             {{ form_start(form, {'method': 'post', 'action': path('modifier_reference',{id:id}), 'attr': {'id':'modifier-reference-form','novalidate':'novalidate'}}) }} 




       <div class="col-md-6 form-group">
                  <label for="username">Type :</label>
               {{form_widget(form.type ,{'id':'type-reference','attr':{'class': 'form-control','placeholder':'Type'}})}}                 
                    <span class="text-danger" id="data.type">{{form_errors(form.type)}}</span>     
       </div> 



        <div class="col-md-6 form-group">
                  <label for="username">Date sortie :</label>
               
               <input class="form-control" name="premier-sortie" id="premier-sortie" type="text" value="{{datesortie}}" />


                    <span class="text-danger" id="data.pays"></span>     
       </div> 



        <div class="col-md-12 form-group">
                  <label for="username">Pays :</label>
               {{form_widget(form.pays ,{'id':'pays-reference','attr':{'class': 'form-control','placeholder':'Type'}})}}                 
                    <span class="text-danger" id="data.pays">{{form_errors(form.pays)}}</span>     
       </div> 


     


       


  
 <div class="col-md-12 form-group">
                  <label for="username">Titre:</label>
                  {{form_widget(form.titre ,{'id':'titre-actualite','attr':{'class': 'form-control','placeholder':'Titre'}})}}                 
                    <span class="text-danger" id="data.titre">{{form_errors(form.titre)}}</span>

                 
       </div>
     



  <div class="col-md-12 form-group">
                  <label for="username">Description :</label>
                  {{form_widget(form.description ,{'id':'description-actualite','attr':{'class': 'form-control','placeholder':'Description','rows':8}})}}                 
                    <span class="text-danger" id="data.description">{{form_errors(form.description)}}</span>

                 
       </div>




 <div class="col-md-12">


    <div class="form-group">

                        <div class="file-loading"> 

                           
                            {{form_widget(form.image,{'id':'file-1-modifier-reference' , 'attr': {'class': 'file'} })}} 


                     </div>

                     <span id="data.image" class="text-danger">{{form_errors(form.image)}}</span>

            </div>
          </div>



<div class="col-offset-md-6 col-md-12">
   <button type="submit"  class="btn btn-info ">Enregistrer</button>
</div>









 {{ form_end(form) }}














              </div>
            </div>
          </div>


</section>



{% endblock %}


{%block aside %}
{%endblock%}








{% block javascript%}

 <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/4.4.7/js/fileinput.js" type="text/javascript"></script>

   <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.0.6/js/locales/fr.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/4.4.7/themes/fa/theme.js" type="text/javascript"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" type="text/javascript"></script>

    











<script>







 $("#file-1-modifier-reference").fileinput({
             language: "fr",
             showUpload: false,
           showRemove: false,
            required: true,
            theme: 'fa',
      
            allowedFileExtensions: ['jpg', 'png', 'gif'],
            overwriteInitial: false,
             initialPreview: [
           
             "<img class='kv-preview-data file-preview-image' src='{{asset('')}}Uploads/{{image}}'>",
      
             ],
        

            maxFileSize:2000
           










});



 $('#premier-sortie').datepicker({
            format: 'd/m/yyyy'
        });


</script>

<script>
$(document).ready(function(){

$('#link-tableau').removeClass('active');
  $('#link-user').removeClass('active');
  $('#link-message').removeClass('active');
  $('#link-actualite').removeClass('active');
 
  $('#link-reference').addClass('active');





});


</script>



{% endblock %}















