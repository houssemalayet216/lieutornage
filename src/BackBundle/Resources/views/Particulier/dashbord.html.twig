

 {% extends '@Back/Default/templateParticulier.html.twig' %}

{% block section_haider %}
<section class="content-header">
      <h1>
        Tableau de bord
      
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>Tableau de bord</a></li>
     
      </ol>
    </section>
{%endblock%}

  {%block pageContainer %} 

   <section class="content">
 <div class="row">
       
        <!-- /.col -->
        <div class="col-md-4 col-sm-6 col-xs-12">
          <div class="info-box">
            <span class="info-box-icon bg-aqua"><i class="fa fa-home"></i></span>

            <div class="info-box-content">
              <span class="info-box-text">Mes Lieux</span>
              <span class="info-box-number">{{Clieux}}</span>
            </div>
            <!-- /.info-box-content -->
          </div>
          <!-- /.info-box -->
        </div>
        <!-- /.col -->

       
        <div class="clearfix visible-sm-block"></div>

        <div class="col-md-4 col-sm-6 col-xs-12">
          <div class="info-box">
            <span class="info-box-icon bg-yellow"><i class="fa fa-calendar-o"></i></span>

            <div class="info-box-content">
              <span class="info-box-text">Réservations reçus</span>
              <span class="info-box-number">{{countResEfectue}}</span>
            </div>
            <!-- /.info-box-content -->
          </div>
          <!-- /.info-box -->
        </div>
        <!-- /.col -->
        <div class="col-md-4 col-sm-6 col-xs-12">
          <div class="info-box">
            <span class="info-box-icon  bg-green"><i class="fa fa-calendar-check-o"></i></span>

            <div class="info-box-content">
              <span class="info-box-text">Réservations en cours</span>
              <span class="info-box-number">{{countResEnCours}}</span>
            </div>
            <!-- /.info-box-content -->
          </div>
          <!-- /.info-box -->
        </div>
        <!-- /.col -->
      </div>



           
             <div class="row">
        <div class="col-xs-12">
          <div class="box">
            <div class="box-header text-center">
              <h3 class="box-title">Dernières réservations</h3>

              
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
              {% if reservations|length >0 %}
              <table class="table table-hover">
                <tr>
               
                  <th>Client</th>
                  <th>Du</th>
                  <th>Au</th>
                  <th>Tarif (DT)</th>
                  <th>Date de réservation</th>
                  <th>Status</th>
                </tr>
                

                    {%for reservation in reservations%}
                <tr>
                  <td>{{reservation.client.nom}} {{reservation.client.prenom}}</td>
                  <td>{{reservation.datedebut|date("d/m/Y")}}</td>
                  <td>{{reservation.datefin|date("d/m/Y")}}</td>
                  <td>{{reservation.tarifTotal}}</td>
                  <td>{{reservation.datereservation|date("d/m/Y")}}</td>
                  <td>
                    {% if reservation.etat=='En attente' %}
                    <span class="label label-warning">{{reservation.etat}}</span>
                    {% elseif reservation.etat=='En cour'  %}
                      <span class="label label-info">{{reservation.etat}}</span>
                      {% else %}
                         <span class="label label-danger">{{reservation.etat}}</span>
                    {% endif %}
                  </td>
                 
                </tr>
              {% endfor %}


              
              </table>
            {% else %}
               <div class="text-center"><h3>Aucune réservation trouvé</h3></div>
            {% endif %}
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
      </div> 
           






































</section>




































 {% endblock %}

  {%block aside %}
  {% endblock %}

  {% block javascript %}
<script>
   $(document).ready(function(){
   $('#link-lieux').removeClass('active');
  $('#link-reservation').removeClass('active');
  $('#link-calendar').removeClass('active');
  $('#link-message').removeClass('active');
  $('#link-profile').removeClass('active');
  $('#link-tableau').addClass('active');

 });

   </script>


  {% endblock %}